<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pakkie.Controls.InfoLabel">
    <ContentView.Content>
        <Frame Padding="2" CornerRadius="9" HorizontalOptions="FillAndExpand" Margin="9,0,9,0" HasShadow="False" BackgroundColor="{StaticResource infoBorder}">
            <Frame CornerRadius="7" Padding="8,6" BackgroundColor="{StaticResource infoLabel}" HasShadow="False" HorizontalOptions="FillAndExpand">
                <StackLayout Padding="0" Margin="0" Spacing="4">
                    <Label Text="{Binding Title}" TextColor="{StaticResource infoTitleColor}" FontSize="8" FontAttributes="Bold"/>
                    <Label Text="{Binding Message}" TextColor="{StaticResource infoMessageColor}" FontSize="8" FontAttributes="Bold"/>
                </StackLayout>
            </Frame>
        </Frame>
    </ContentView.Content>
</ContentView>